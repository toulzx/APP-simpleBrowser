<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:fitsSystemWindows="true">

    <fragment
        android:id="@+id/fragment_top"
        android:name="cn.njupt.assignment.tou.fragment.topFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_height"
        android:layout_marginBottom="@dimen/bottom_height"
        app:layout_constraintTop_toBottomOf="@id/fragment_top"
        app:layout_constraintBottom_toTopOf="@id/fragment_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <fragment
        android:id="@+id/fragment_bottom"
        android:name="cn.njupt.assignment.tou.fragment.bottomFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>