<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    
    <RelativeLayout
        android:id="@+id/list_bookmark_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/list_bookmark_id"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_bookmark_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/list_bookmark_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="7dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/list_bookmark_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:gravity="center|left"
            android:maxLines="1"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/list_bookmark_url"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/list_bookmark_name"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="16"
            android:textSize="10sp"
            tools:ignore="RtlHardcoded,SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="85"
                android:background="#e2e1e4" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>